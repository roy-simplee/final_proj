<h1>Reviews#index</h1>
<p>Find me in app/views/reviews/companies/index.html.erb</p>

<div class="row">
  <div class="col-md-8">
    <% @reviews.each do |review| %>
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to review.title, [@company, review] %>
        </h4>
        <small>
          <%= review.title %>
        </small>
      </div>
    <% end %>
    <%= will_paginate @reviews %>
  </div>
</div>
